{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "moduleResolution": "node",
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  }
}